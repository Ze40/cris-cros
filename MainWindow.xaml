<Window x:Class="cris_cros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cris_cros"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="textBox" HorizontalAlignment="Left" Margin="60,0,0,36" TextWrapping="Wrap" Text="Введите слово" Width="121" TextChanged="TextBox_TextChanged" Height="23" VerticalAlignment="Bottom"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="23" Margin="186,0,0,36" VerticalAlignment="Bottom" Width="89" Click="Button_Click_Add"/>
        <Button Content="Начать" HorizontalAlignment="Right" Margin="0,0,60,36" VerticalAlignment="Bottom" Width="120" Height="23" Click="Button_Click_Start"/>
        <Canvas Margin="60,28,60,88" Background="LightGray" Name="Canvas"/>

    </Grid>
</Window>
