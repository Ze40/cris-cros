<Window x:Class="cris_cros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cris_cros"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="textBox" HorizontalAlignment="Left" Height="23" Margin="60,375,0,0" TextWrapping="Wrap" Text="Введите слово" VerticalAlignment="Top" Width="121" TextChanged="TextBox_TextChanged"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="23" Margin="186,375,0,0" VerticalAlignment="Top" Width="89" Click="Button_Click_Add"/>
        <Button Content="Начать" HorizontalAlignment="Left" Margin="571,375,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="Button_Click_Start"/>

    </Grid>
</Window>
